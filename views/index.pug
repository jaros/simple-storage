extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" enctype="multipart/form-data" action="/upload")
            #error
                if error
                    p.text-danger Error!!!

            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Upload photos

            //-input email
            label( for="inputEmail" class="sr-only") Photos
            input(type="file" multiple name="photos" id="inputEmail" class="form-control" placeholder="Choose files" required autofocus)

            
            //-signIn button
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Sign in
